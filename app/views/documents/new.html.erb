<% @title = 'Upload Document' %>

<h2>Upload Document</h2>

<%= simple_form_for(@document, url: documents_path(data: { id: @document.attachable_id, type: @document.attachable_type }),
  wrapper: :horizontal_form) do |f| %>
  <div class="form-group row">
    <div class="col-sm-3"><%= f.label "Document", required: true %></div>
    <div class="col-sm-9">
      <label class="custom-file" lang="en">
        <%= f.file_field :document_to_attach, class: "custom-file-input" %>
        <span class="custom-file-control"></span>
      </label>
    </div>
    <%= f.input :encrypted, radio_label: 'Encrypt file?', radio_for: 'document_encrypted', wrapper: :horizontal_boolean %>
    <%= f.input :visible, radio_label: 'Visible to tenant?', radio_for: 'document_visible', wrapper: :horizontal_boolean %>
  </div>

  <div class="form-group row">
    <div class="col btn-group">
      <%= f.submit "Upload", class: "btn btn-primary" %>
      <%= link_to("Back", _back_url, class: "btn btn-secondary") %>
    </div>
  </div>
<% end %>