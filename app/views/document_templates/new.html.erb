<% @title = 'Create Document Template' %>

<h2>Create Document Template</h2>

<%= simple_form_for(@template, url: template_path, wrapper: :horizontal_form) do |f| %>
  <%= f.input :document_to_attach, as: :file, label: 'Document', file_label: 'Select File', required: true,
    wrapper: :horizontal_file_input %>

  <div class="form-group row">
    <div class="col btn-group">
      <%= f.submit "Upload", class: "btn btn-primary" %>
      <%= link_to("Back", _back_url, class: "btn btn-secondary") %>
    </div>
  </div>
<% end %>