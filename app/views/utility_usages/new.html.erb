<% @title = 'Add Usage Reading' %>

<h2>Add <%= @utility.name %> Usage Reading</h2>

<%= simple_form_for(@usage, wrapper: :input_group_form) do |f| %>
  <%= f.input :date, icon: 'far fa-calendar-alt fa-fw', value: Date.now %>
  <%= f.input :reading, icon: 'fas fa-tachometer-alt fa-fw', placeholder: 'Reading' %>

  <div class="form-group row">
    <div class="btn-group col">
      <%= f.submit "Add", class: "btn btn-primary" %>
      <%= link_to("Back", _back_url, class: "btn btn-secondary") %>
    </div>
  </div>
<% end %>