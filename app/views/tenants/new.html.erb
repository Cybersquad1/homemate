<% @title = 'Create Tenant' %>

<%= simple_form_for(@tenant, wrapper: :horizontal_form) do |f| %>
  <%= f.input :name, placeholder: "Name" %>

  <div class="card">
    <h4 class="card-header">Account</h4>
    <div class="card-body">
      <%= f.simple_fields_for(@user, wrapper: :input_group_form) do |user| %>
        <%= user.input :first_name, icon: "fas fa-user-circle", placeholder: "First Name" %>
        <%= user.input :first_name, icon: "fas fa-user-circle", placeholder: "Last Name" %>
        <%= user.input :username, icon: "fas fa-user", placeholder: "Username" %>
        <%= user.input :email, icon: "fas fa-at", placeholder: "Email" %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col btn-group">
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to("Back", _back_url, class: "btn btn-secondary") %>
    </div>
  </div>
<% end %>