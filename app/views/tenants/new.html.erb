<% @title = 'Create Tenant' %>

<h2>Create Tenant</h2>

<p>
  Fill in the perspective tenant's information below to create a new tenant account. Please note that a tenancy
  application will be automatically created.
</p>

<%= simple_form_for(@tenant, wrapper: :horizontal_form) do |f| %>
  <%= f.input :name, placeholder: "Name" %>

  <div class="card mb-3">
    <h4 class="card-header">Primary Contact</h4>
    <div class="card-body">
      <%= f.simple_fields_for(@contact, wrapper: :horizontal_form) do |contact| %>
        <%= contact.input :title, label: "Title" %>
        <%= contact.input :first_name, label: "First Name" %>
        <%= contact.input :last_name, label: "Last Name" %>
        <%= contact.input :email, label: "Email", required: true %>
        <%= contact.input :phone, label: "Phone" %>
        <%= contact.input :address, label: "Address" %>
      <% end %>
      <%= f.simple_fields_for(@user, wrapper: :horizontal_form) do |user| %>
        <%= user.input :username, label: "Username", required: true %>
      <% end %>
    </div>
  </div>

  <%= f.input :no_application, as: :boolean, radio_label: "Do not create tenancy application",
    wrapper: :horizontal_boolean %>

  <div class="form-group row">
    <div class="col btn-group">
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to("Back", _back_url, class: "btn btn-secondary") %>
    </div>
  </div>
<% end %>