<% @title = 'Tenants' %>

<h2>Tenants</h2>

<table class="table">
  <thead class="thead-light">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody class="bg-white">
  <% @tenants.each do |tenant| %>
  <tr>
    <th><%= tenant.name %></th>
    <td></td>
  </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">
      <div class="float-right">
        <%= link_to('Add tenant', new_tenant_path, class: 'btn btn-primary') %>
      </div>
    </td>
  </tr>
  </tfoot>
</table>