<% @title = 'Update Contact' %>

<h2>Update Contact for <%= associable.name %></h2>

<%= simple_form_for(@contact, url: url_for([associable, @contact]), wrapper: :horizontal_form) do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :first_name, label: "First Name" %>
  <%= f.input :last_name, label: "Last Name" %>
  <%= f.input :role, label: "Contact Type" %>
  <%= f.input :email, label: "Email" %>
  <%= f.input :phone, label: "Phone" %>
  <%= f.input :address, label: "Address" %>

  <div class="form-group row">
    <div class="col btn-group">
      <%= f.submit "Update", class: "btn btn-warning" %>
      <%= link_to("Back", _back_url, class: "btn btn-info") %>
    </div>
  </div>
<% end %>