<% @title = "Login" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <div class="col">
      <div class="input-group">
        <div class="input-group-addon"><i class="fas fa-user-circle"></i></div>
        <%= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Username" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <div class="input-group">
        <div class="input-group-addon"><i class="fas fa-key"></i></div>
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= f.submit "Login", class: "btn btn-primary float-right" %>
    </div>
  </div>
<% end %>
